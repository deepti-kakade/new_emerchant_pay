<div class="flex-column" style = "height: auto;">
  <h1> Merchant </h1>
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <!-- Merchant Table -->
  <div>
    <table class="table table-info table-striped">
      <ol class="fs-2">
        <thead class="table-secondary">
          <td class="text-center"> Id </td>
          <td class="text-center"> Name </td>
          <td class="text-center"> Email </td>
          <td colspan=3 class="text-center"> Action </td>
        </thead>
        <% @merchants.each do |merchant| %>
          <tr>
            <td class="text-center"> <%= merchant.id %> </td>
            <td class="text-center"> <%= link_to merchant.name, merchant_path(merchant) %> </td>
            <td class="text-center"> <%= merchant.email %> </td>
            <td class="text-center"><%= button_to "Show",merchant_path(merchant),method: :get, class:"btn-success border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Edit",edit_merchant_path(merchant),method: :get, class:"btn-primary border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Delete",merchant_path(merchant),method: :delete, class:"btn-danger border-0 rounded-pill shadow px-3 py-2" %></td>
          </tr>
        <% end %>
      </ol>
    </table>
  </div>
